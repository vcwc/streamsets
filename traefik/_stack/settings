#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/streamsets,vcwc/nginx/rewrite"
export VCW_STACK_GLOBAL_STACKNAMES_PREVIOUS="vcw_stack_streamsets,vcw_stack_url_rewrite"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_streamsets,vcw_stack_streamsets_ui_streamsets"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_streamsets"
export VCW_STACK_GLOBAL_RUNSTACKS="vcw_stack_streamsets_ui_streamsets"
export VCW_STACK_GLOBAL_VOLUME_LIST="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_streamsets_volume,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_nginx_config_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_streamsets_volume:/data,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_nginx_config_volume:/vcw/pwd"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_STREAMSETS_UI_STREAMSETS_ENVIRONMENT_CONF_PATH,\
$VCW_STACK_STREAMSETS_UI_STREAMSETS_ENVIRONMENT_CONF_UPSTREAM,\
$VCW_STACK_STREAMSETS_UI_STREAMSETS_COMPOSE_EXTENSIONS,\
$VCW_STACK_STREAMSETS_MODULE_STREAMSETS_PORT,\
$VCW_STACK_STREAMSETS_PORTS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_STREAMSETS_MODULE_STREAMSETS_PORT=
export VCW_STACK_STREAMSETS_PORTS=
export VCW_STACK_STREAMSETS_UI_STREAMSETS_ENVIRONMENT_CONF_PATH="/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/streamsets"
export VCW_STACK_STREAMSETS_UI_STREAMSETS_ENVIRONMENT_CONF_UPSTREAM="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_streamsets:18630"
export VCW_STACK_STREAMSETS_UI_STREAMSETS_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay,
      traefik.http.services.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_nginx.loadbalancer.server.port=80,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_nginx.entrypoints=conteco,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_nginx.rule=PathPrefix(\"/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/streamsets\")]
${DOLLAR}{VCW_STACK_STREAMSETS_UI_STREAMSETS_COMPOSE_EXTENSIONS}"
# END GLOBAL SETTINGS

# START SETTINGS streamsets.base
export VCW_STACK_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="512m"
export VCW_STACK_STREAMSETS_DEPLOY_RESOURCES_LIMITS_MEMORY="768m"
# END SETTINGS streamsets.base
# START SETTINGS nginx.base
export VCW_STACK_STREAMSETS_UI_STREAMSETS_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export VCW_STACK_STREAMSETS_UI_STREAMSETS_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="16m"
# END SETTINGS nginx.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
